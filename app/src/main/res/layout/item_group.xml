<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/item_group_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/item_background"
              android:orientation="vertical">


    <!-- Основное содержимое -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_group_color"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/gray_2"/>

        <TextView
            android:id="@+id/item_group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:text="Название группы"
            android:textColor="@color/gray_7"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/item_group_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textColor="@color/gray_7"
            android:textSize="16sp"/>

        <ImageButton
            android:id="@+id/item_group_open_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/button_options"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"
            android:tint="@color/icon_options_color"
            app:srcCompat="@drawable/ic_arrow_forward_black_24dp"/>

    </LinearLayout>


    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_3"/>

</LinearLayout>