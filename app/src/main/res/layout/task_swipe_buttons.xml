<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="12dp"
    android:layout_marginStart="12dp"
    android:focusable="false"
    tools:ignore="ContentDescription"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/swipe_delete_task_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/button_options_task"
        android:onClick="swipeTaskButton"
        android:tint="@color/delete_task_button"
        app:srcCompat="@drawable/ic_delete_black_24dp"/>

    <ImageButton
        android:id="@+id/swipe_done_task_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/button_options_task"
        android:onClick="swipeTaskButton"
        android:tint="@color/done_task_button"
        app:srcCompat="@drawable/ic_done_black_24dp"/>

    <ImageButton
        android:id="@+id/swipe_cancel_task_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/button_options_task"
        android:onClick="swipeTaskButton"
        android:tint="@color/blue"
        app:srcCompat="@drawable/ic_replay_black_24dp"/>

</LinearLayout>