<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/item_task_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/item_background">

    <!-- Верхний уровень -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_task_warning"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="48dp"
            app:srcCompat="@drawable/ic_notifications_outline_24dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/item_task_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="9dp"
            android:text="25 декабря 2018"
            android:textColor="@color/gray_4"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_task_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="9dp"
            android:text="Самый низкий"
            android:textColor="@color/gray_4"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_task_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:text="Каждую неделю"
            android:textColor="@color/gray_4"
            android:textSize="12sp"/>
    </LinearLayout>


    <!-- Средний уровень -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="19dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/item_task_color"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="20dp"
            android:background="@color/gray_2"/>

        <TextView
            android:id="@+id/item_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="20dp"
            android:text="Сделать отличный релиз этого приложения"
            android:textColor="@color/gray_7"
            android:textSize="16sp"/>
    </LinearLayout>


    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_3"/>

</LinearLayout>