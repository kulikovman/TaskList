<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/gray_3"> <!-- цвет вспышки при нажатии -->

    <!-- маска для прозрачного фона -->
    <item android:id="@android:id/mask">
        <color android:color="@color/black"/> <!-- любой цвет -->
    </item>

    <!-- Цвета состояний должны отличаться от цвета вспышки -->
    <item>
        <selector>
            <item android:state_selected="true">
                <color android:color="@color/gray_ripple_selector"/>
            </item>

            <item>
                <color android:color="@color/transparent"/>
            </item>
        </selector>
    </item>
</ripple>